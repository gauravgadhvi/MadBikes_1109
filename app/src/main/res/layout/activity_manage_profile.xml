    <TextView
        android:id="@+id/ea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="cshe@hawk.iit.edu"
        android:layout_below="@id/user"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        />
